---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Tag from "@components/Tag.astro";
import Datetime from "@components/Datetime";
import type { CollectionEntry } from "astro:content";
import { slugifyStr } from "@utils/slugify";
import ShareLinks from "@components/ShareLinks.astro";
import { SITE } from "@config";

export interface Props {
  book: CollectionEntry<"book">;
}

const { book } = Astro.props;

const {
  data: {
    title,
    addedDatetime,
    pubDatetime,
    modDatetime,
    description,
    tags,
    ogImage,
    thumbnail,
  },
  render,
} = book;

const { Content } = await render();

const ogImageUrl = typeof ogImage === "string" ? ogImage : ogImage?.src;
const ogUrl = new URL(
  ogImageUrl ?? `/books/${slugifyStr(title)}.png`,
  Astro.url.origin
).href;

const layoutProps = {
  title: `${title} | ${SITE.title}`,
  description,
  pubDatetime,
  modDatetime,
  ogImage: ogUrl,
  scrollSmooth: true,
};
---

<Layout {...layoutProps}>
  <Header />

  <div class="mx-auto flex w-full max-w-4xl justify-start px-2">
    <button
      class="focus-outline mb-2 mt-8 flex hover:opacity-75"
      onclick="(() => (history.length === 1) ? window.location = '/' : history.back())()"
    >
      <svg xmlns="http://www.w3.org/2000/svg"
        ><path
          d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
        ></path>
      </svg><span>Go back</span>
    </button>
  </div>
  <main id="main-content">
    <div class="flex flex-col gap-8 md:flex-row">
      <div class="w-full md:w-1/3">
        <img
          src={thumbnail?.src}
          alt={`Cover of ${book.data.title}`}
          class="w-full rounded-lg shadow-md"
        />
      </div>
      <div class="w-full md:w-2/3">
        <h1 class="mb-2 text-3xl font-bold">{title}</h1>
        {
          book.data.rating && (
            <div class="mb-4 flex items-center">
              <span class="text-lg">
                {"★".repeat(Math.round(book.data.rating))}{"☆".repeat(5 - Math.round(book.data.rating))}
              </span>
              <span class="ml-2 text-gray-600">
                {book.data.rating.toFixed(1)}
              </span>
            </div>
          )
        }
        <Datetime
          pubDatetime={addedDatetime}
          modDatetime={modDatetime}
          size="lg"
          className="my-2"
        />
        <span>Estimated Reading Time: ({book.data.readingTime})</span>
        <article
          id="article"
          role="article"
          class="prose mx-auto mt-8 max-w-4xl"
        >
          <Content />
        </article>
        <div class="flex gap-4">
          <a
            href={book.data.goodreads}
            class="btn flex items-center gap-2 rounded-md border border-gray-300 bg-white px-4 py-2 shadow-sm hover:bg-gray-50"
          >
            <img
              src="/assets/logos/goodreads-logo.png"
              alt="GoodReads"
              class="h-6 w-6"
            />
            <span>GoodReads</span>
          </a>
          <a
            href={book.data.amazon}
            class="btn flex items-center gap-2 rounded-md border border-gray-300 bg-white px-4 py-2 shadow-sm hover:bg-gray-50"
          >
            <img
              src="/assets/logos/amazon-logo.png"
              alt="Amazon"
              class="h-6 w-6"
            />
            <span>Amazon</span>
          </a>
        </div>
        <ul class="my-8">
          {tags.map(tag => <Tag tag={slugifyStr(tag)} />)}
        </ul>

        <div
          class="flex flex-col-reverse items-center justify-between gap-6 sm:flex-row-reverse sm:items-end sm:gap-4"
        >
          <button
            id="back-to-top"
            class="focus-outline whitespace-nowrap py-1 hover:opacity-75"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="rotate-90">
              <path
                d="M13.293 6.293 7.586 12l5.707 5.707 1.414-1.414L10.414 12l4.293-4.293z"
              ></path>
            </svg>
            <span>Back to Top</span>
          </button>

          <ShareLinks />
        </div>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  main {
    @apply mx-auto w-full max-w-4xl px-4 pb-12;
  }
  .book-title {
    @apply text-2xl font-semibold text-skin-accent;
  }
</style>
