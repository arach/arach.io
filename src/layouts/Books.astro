---
import type { CollectionEntry } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Main from "@layouts/Main.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import Pagination from "@components/Pagination.astro";
import BookCard from "@components/BookCard";
import { SITE } from "@config";
import type { BookData } from "../interfaces";

export interface Props {
  currentPage: number;
  totalPages: number;
  paginatedItems: Array<{
    id: string;
    slug: string;
    body: string;
    collection: string;
    data: BookData;
  }>;
}

const { currentPage, totalPages, paginatedItems } = Astro.props;

// Set canonical URL - page 1 should always point to the base books URL
const canonicalURL = currentPage === 1 
  ? new URL(`/books/`, Astro.site).href
  : new URL(`/books/${currentPage}/`, Astro.site).href;
---

<Layout title={`Books | ${SITE.title}`} canonicalURL={canonicalURL}>
  <Header activeNav="books" />
  <Main
    pageTitle="Books"
    pageDesc="Some of the books I've read - pulled from Goodreads and memory :)"
  >
    <ul>
      {
        paginatedItems.map(({ data, slug }) => (
          <BookCard href={`/books/${slug}/`} frontmatter={data} />
        ))
      }
    </ul>
  </Main>

  <Pagination
    currentPage={currentPage}
    totalPages={totalPages}
    prevUrl={`/books${currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""}/`}
    nextUrl={`/books/${currentPage + 1}/`}
  />

  <Footer noMarginTop={totalPages > 1} />
</Layout>
