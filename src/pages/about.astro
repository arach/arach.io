---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@config";
import "@components/TacticalAbout.css";

const layoutProps = {
  title: "About - Arach Tchoupani",
  description: "Engineer & Entrepreneur with 15+ years in technology leadership",
};
---

<Layout {...layoutProps}>
  <Header activeNav="about" />
  <main id="main-content" class="mx-auto flex flex-col w-full items-center px-4 py-12 pb-20" style="max-width: 1280px;">
    <!-- Full-size tactical about section -->
    <div class="tactical-about-container shadow-2xl rounded-lg overflow-hidden">
        <div class="tactical-about">
          <!-- Thin border -->
          <div class="tactical-border"></div>
          
          <!-- Corner crosses -->
          <div class="corner-cross top-left">
            <div class="cross-h"></div>
            <div class="cross-v"></div>
          </div>
          <div class="corner-cross top-right">
            <div class="cross-h"></div>
            <div class="cross-v"></div>
          </div>
          <div class="corner-cross bottom-left">
            <div class="cross-h"></div>
            <div class="cross-v"></div>
          </div>
          <div class="corner-cross bottom-right">
            <div class="cross-h"></div>
            <div class="cross-v"></div>
          </div>
          
          <!-- Header bar -->
          <div class="tactical-header">
            <span>SECTOR: ALPHA-7 | GRID: 37.7825°N, 122.3930°W | AUTH: VERIFIED</span>
            <span>CLEARANCE: LEVEL_5</span>
          </div>
          
          <!-- Main content -->
          <div class="main-content">
            <!-- Left side - Tactical UI -->
            <div class="tactical-ui">
              <!-- Callsign and name -->
              <div class="identity-section">
                <div class="callsign">CALLSIGN: PERSIAN_EAGLE</div>
                <h1 class="name">ARACH_TCHOUPANI</h1>
                <div class="unit">UNIT: ENGINEERING_CORPS <span class="unit-specialization">| SPECIALIZATION: FULL_STACK_SPEC_OPS</span></div>
              </div>
              
              <!-- Mission parameters -->
              <div class="mission-parameters">
                <div class="section-header">◆ MISSION PARAMETERS</div>
                <div class="parameters-grid">
                  <div class="param-row">
                    <span>OBJECTIVE:</span>
                    <span class="param-value">BUILD_AND_SCALE</span>
                  </div>
                  <div class="param-row">
                    <span>PRIORITY:</span>
                    <span class="param-value priority">CRITICAL</span>
                  </div>
                  <div class="param-row">
                    <span>STATUS:</span>
                    <span class="param-value">ACTIVE</span>
                  </div>
                </div>
              </div>
              
              <!-- Systems status -->
              <div class="systems-status">
                <div class="section-header">◆ SYSTEMS STATUS</div>
                <div class="status-grid">
                  <div class="status-row">
                    <span class="status-label">AI/ML:</span>
                    <div class="status-bar">
                      <div class="status-fill" style="--fill-width: 88%; --delay: 0.1s;"></div>
                    </div>
                    <span class="status-text" style="--delay: 0.1s;">RLHF</span>
                  </div>
                  <div class="status-row">
                    <span class="status-label">STACK:</span>
                    <div class="status-bar">
                      <div class="status-fill" style="--fill-width: 100%; --delay: 0.3s;"></div>
                    </div>
                    <span class="status-text" style="--delay: 0.3s;">FULL_OPERATIONAL</span>
                  </div>
                  <div class="status-row">
                    <span class="status-label">PRODUCT:</span>
                    <div class="status-bar">
                      <div class="status-fill" style="--fill-width: 94%; --delay: 0.5s;"></div>
                    </div>
                    <span class="status-text" style="--delay: 0.5s;">SHIPPING</span>
                  </div>
                </div>
              </div>
              
              <!-- Command interface -->
              <div class="command-interface">
                <div class="command-indicator"></div>
                <span class="command-text">[CONNECT] ► ARACH.IO</span>
              </div>
            </div>
            
            <!-- Right side - Polaroid -->
            <div class="polaroid-container">
              <div class="polaroid">
                <img 
                  src="/assets/arach.jpg" 
                  alt={SITE.author}
                  class="polaroid-image"
                />
                <div class="polaroid-caption">
                  <div class="spec-sheet">
                    <div class="spec-header">
                      <span class="spec-id">ARACH_TCHOUPANI</span>
                      <span class="spec-classification">CLASS_MILLENNIAL</span>
                    </div>
                    <div class="spec-grid">
                      <div class="spec-item">
                        <span class="spec-label">TYPE:</span>
                        <span class="spec-value">FOUNDER</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">STACK:</span>
                        <span class="spec-value">FULL</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">AI/ML:</span>
                        <span class="spec-value">RLHF</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">EST:</span>
                        <span class="spec-value">2010</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">LOC:</span>
                        <span class="spec-value">SF_BAY</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">STATUS:</span>
                        <span class="spec-value">VERY_ONLINE</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Bio section below -->
      <div class="mt-12 max-w-4xl mx-auto prose dark:prose-invert">
        <h2 class="text-2xl font-bold mb-6" style="font-family: 'Krub', sans-serif;">Bio</h2>
        <p class="text-lg leading-relaxed mb-6" style="font-family: 'Krub', sans-serif;">
          With a 15-year track record in technology leadership in fast-growing startups, Arach has held various roles from Software Engineer to CTO, leading engineering for 4 venture-backed companies in NY and Montreal.
        </p>
        <p class="text-lg leading-relaxed mb-6" style="font-family: 'Krub', sans-serif;">
          He co-founded Breathe Life in 2018 in Montreal, supported by Diagram Ventures and Real Ventures, and rapidly grew its InsurTech product until its acquisition by Zinnia in 2022. He joined Meta and worked on Creators initiatives on a standalone 0->1 product as well as on the blue app.
        </p>
        <p class="text-lg leading-relaxed" style="font-family: 'Krub', sans-serif;">
          He is currently focused on coding every day and learning new things.
        </p>
        
        <div class="mt-12 grid grid-cols-1 md:grid-cols-3 gap-6">
          <div class="tactical-stat-card">
            <div class="stat-label">YEARS_IN_FIELD</div>
            <div class="stat-value">15+</div>
          </div>
          <div class="tactical-stat-card">
            <div class="stat-label">VENTURES_LED</div>
            <div class="stat-value">4</div>
          </div>
          <div class="tactical-stat-card">
            <div class="stat-label">EXIT_STATUS</div>
            <div class="stat-value">ACQUIRED</div>
          </div>
        </div>
      </div>
  </main>
  <Footer />
</Layout>

