---
import Layout from "@layouts/Layout.astro";
import { SITE } from "@config";
---

<Layout title="OG Image Preview - Tactical UI">
  <main class="mx-auto flex w-full max-w-6xl justify-center px-4 py-12">
    <div class="w-full">
      <h1 class="mb-8 text-2xl font-bold">OG Image Preview - Anduril/Palantir Tactical Design</h1>
      
      <!-- OG Image HTML Preview -->
      <div class="og-preview-container shadow-2xl rounded-lg overflow-hidden">
        <div class="og-image-preview">
          <!-- Tactical grid overlay -->
          <div class="tactical-grid"></div>
          
          <!-- Scanning line -->
          <div class="scan-line"></div>
          
          <!-- Main content container -->
          <div class="main-content">
            <!-- Left side - Tactical UI -->
            <div class="tactical-ui">
              <!-- Corner brackets -->
              <div class="corner-bracket top-left"></div>
              <div class="corner-bracket top-right"></div>
              <div class="corner-bracket bottom-left"></div>
              <div class="corner-bracket bottom-right"></div>
              
              <!-- Tactical header -->
              <div class="tactical-header">
                <div class="header-row">
                  <span>[LATTICE OS v2.4.1]</span>
                  <span>CLEARANCE: LEVEL_5</span>
                </div>
                <div class="header-info">
                  SECTOR: ALPHA-7 | GRID: 37.7749°N, 122.4194°W | AUTH: VERIFIED
                </div>
              </div>
              
              <!-- Callsign and name -->
              <div class="identity-block">
                <div class="callsign">CALLSIGN: FOUNDER-1</div>
                <h1 class="name">{SITE.author}</h1>
                <div class="unit-info">
                  UNIT: ENGINEERING_CORPS | SPECIALIZATION: FULL_STACK_OPS
                </div>
              </div>
              
              <!-- Mission parameters -->
              <div class="mission-block">
                <div class="block-header">◆ MISSION PARAMETERS</div>
                <div class="mission-params">
                  <div class="param-row">
                    <span>OBJECTIVE:</span>
                    <span class="value-active">BUILD_AND_SCALE</span>
                  </div>
                  <div class="param-row">
                    <span>PRIORITY:</span>
                    <span class="value-critical">CRITICAL</span>
                  </div>
                  <div class="param-row">
                    <span>STATUS:</span>
                    <span class="value-active">ACTIVE</span>
                  </div>
                </div>
              </div>
              
              <!-- System status -->
              <div class="systems-block">
                <div class="block-header">◆ SYSTEMS STATUS</div>
                <div class="system-row">
                  <span class="system-name">AI/ML:</span>
                  <span class="status-bars">▓▓▓▓▓▓▓▓░░</span>
                  <span class="status-text">RLHF</span>
                </div>
                <div class="system-row">
                  <span class="system-name">STACK:</span>
                  <span class="status-bars">▓▓▓▓▓▓▓▓▓▓</span>
                  <span class="status-text">FULL_OPERATIONAL</span>
                </div>
                <div class="system-row">
                  <span class="system-name">PRODUCT:</span>
                  <span class="status-bars">▓▓▓▓▓▓▓▓▓░</span>
                  <span class="status-text">SHIPPING</span>
                </div>
              </div>
              
              <!-- Command interface -->
              <div class="command-interface">
                <div class="command-status">
                  <div class="status-indicator"></div>
                  <span>[CONNECT]</span>
                </div>
                <span class="command-text">► ARACH.IO</span>
              </div>
            </div>
            
            <!-- Right side - Polaroid photo -->
            <div class="photo-container">
              <div class="polaroid">
                <img 
                  src="/assets/arach.jpg" 
                  alt={SITE.author}
                  class="polaroid-image"
                />
                <div class="polaroid-caption">
                  <div class="spec-sheet">
                    <div class="spec-header">
                      <span class="spec-id">ARACH_TCHOUPANI</span>
                      <span class="spec-classification">CLASS_MILLENNIAL</span>
                    </div>
                    <div class="spec-grid">
                      <div class="spec-item">
                        <span class="spec-label">TYPE:</span>
                        <span class="spec-value">FOUNDER</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">STACK:</span>
                        <span class="spec-value">FULL</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">AI/ML:</span>
                        <span class="spec-value">RLHF</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">EST:</span>
                        <span class="spec-value">2010</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">LOC:</span>
                        <span class="spec-value">SF_BAY</span>
                      </div>
                      <div class="spec-item">
                        <span class="spec-label">STATUS:</span>
                        <span class="spec-value">VERY_ONLINE</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Targeting reticles -->
          <div class="targeting-reticle inner"></div>
          <div class="targeting-reticle outer"></div>
        </div>
      </div>
      
      <div class="mt-8 text-sm text-gray-600 dark:text-gray-400">
        <p>Dimensions: 1200 x 630px (Open Graph standard)</p>
        <p>Tactical UI inspired by Anduril Lattice OS & Palantir Gotham</p>
      </div>
    </div>
  </main>
</Layout>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Mono:wght@400;700&display=swap');
  
  .og-preview-container {
    width: 100%;
    max-width: 1200px;
    aspect-ratio: 1200 / 630;
    position: relative;
    background: #000;
  }
  
  .og-image-preview {
    width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    background: #000000;
    overflow: hidden;
  }
  
  /* Tactical grid */
  .tactical-grid {
    position: absolute;
    inset: 0;
    background-image: 
      repeating-linear-gradient(0deg, transparent, transparent 39px, rgba(0,255,209,0.03) 40px),
      repeating-linear-gradient(90deg, transparent, transparent 39px, rgba(0,255,209,0.03) 40px);
    pointer-events: none;
  }
  
  /* Scanning line animation */
  .scan-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, rgba(0,255,209,0.5) 50%, transparent 100%);
    opacity: 0.8;
    animation: scan 4s linear infinite;
  }
  
  @keyframes scan {
    0% { transform: translateY(0); }
    100% { transform: translateY(630px); }
  }
  
  .main-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 40px 60px;
    position: relative;
    z-index: 1;
    gap: 60px;
  }
  
  /* Tactical UI side */
  .tactical-ui {
    flex: 1;
    display: flex;
    flex-direction: column;
    position: relative;
    color: #fff;
    font-family: 'Space Mono', monospace;
  }
  
  /* Corner brackets */
  .corner-bracket {
    position: absolute;
    width: 30px;
    height: 30px;
    border-color: rgba(0,255,209,0.6);
    border-style: solid;
    border-width: 0;
  }
  
  .corner-bracket.top-left {
    top: -10px;
    left: -10px;
    border-top-width: 2px;
    border-left-width: 2px;
  }
  
  .corner-bracket.top-right {
    top: -10px;
    right: -10px;
    border-top-width: 2px;
    border-right-width: 2px;
  }
  
  .corner-bracket.bottom-left {
    bottom: -10px;
    left: -10px;
    border-bottom-width: 2px;
    border-left-width: 2px;
  }
  
  .corner-bracket.bottom-right {
    bottom: -10px;
    right: -10px;
    border-bottom-width: 2px;
    border-right-width: 2px;
  }
  
  /* Tactical header */
  .tactical-header {
    margin-bottom: 24px;
    padding-bottom: 12px;
    border-bottom: 1px solid rgba(0,255,209,0.2);
  }
  
  .header-row {
    display: flex;
    justify-content: space-between;
    font-size: 10px;
    color: rgba(0,255,209,0.8);
    letter-spacing: 0.1em;
    margin-bottom: 4px;
  }
  
  .header-info {
    font-size: 9px;
    color: rgba(255,255,255,0.5);
    letter-spacing: 0.05em;
  }
  
  /* Identity block */
  .identity-block {
    margin-bottom: 20px;
  }
  
  .callsign {
    font-size: 12px;
    color: rgba(0,255,209,0.7);
    margin-bottom: 4px;
    letter-spacing: 0.15em;
  }
  
  .name {
    font-size: 48px;
    font-weight: 700;
    margin: 0;
    color: #FFFFFF;
    letter-spacing: 0.02em;
    text-transform: uppercase;
  }
  
  .unit-info {
    font-size: 11px;
    color: rgba(255,255,255,0.5);
    margin-top: 4px;
    letter-spacing: 0.1em;
  }
  
  /* Mission block */
  .mission-block {
    background: rgba(0,255,209,0.05);
    border: 1px solid rgba(0,255,209,0.2);
    padding: 16px;
    margin-bottom: 20px;
  }
  
  .block-header {
    font-size: 10px;
    color: rgba(0,255,209,0.8);
    margin-bottom: 12px;
    letter-spacing: 0.1em;
  }
  
  .mission-params {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  
  .param-row {
    display: flex;
    justify-content: space-between;
    font-size: 11px;
    color: rgba(255,255,255,0.7);
  }
  
  .value-active {
    color: rgba(0,255,209,0.8);
  }
  
  .value-critical {
    color: rgba(255,184,0,0.8);
  }
  
  /* Systems block */
  .systems-block {
    margin-bottom: 24px;
  }
  
  .system-row {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: 10px;
    color: rgba(255,255,255,0.6);
    margin-bottom: 8px;
  }
  
  .system-name {
    width: 60px;
  }
  
  .status-bars {
    color: rgba(0,255,209,0.6);
    font-size: 12px;
  }
  
  .status-text {
    color: rgba(255,255,255,0.5);
    font-size: 9px;
  }
  
  /* Command interface */
  .command-interface {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    background: rgba(0,0,0,0.5);
    border: 1px solid rgba(0,255,209,0.3);
    border-left: 3px solid rgba(0,255,209,0.8);
    margin-top: 20px;
  }
  
  .command-status {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 12px;
    color: rgba(0,255,209,0.9);
    letter-spacing: 0.05em;
  }
  
  .status-indicator {
    width: 8px;
    height: 8px;
    background: rgba(0,255,209,0.8);
    box-shadow: 0 0 10px rgba(0,255,209,0.6);
    animation: pulse 2s ease-in-out infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 1; }
  }
  
  .command-text {
    font-size: 12px;
    color: rgba(255,255,255,0.7);
    letter-spacing: 0.1em;
  }
  
  /* Readiness block */
  .readiness-block {
    margin-top: 20px;
    font-size: 10px;
    color: rgba(255,255,255,0.5);
  }
  
  .readiness-text {
    margin-bottom: 4px;
  }
  
  .readiness-bar {
    width: 200px;
    height: 4px;
    background: rgba(255,255,255,0.1);
    position: relative;
  }
  
  .readiness-fill {
    width: 85%;
    height: 100%;
    background: linear-gradient(90deg, rgba(0,255,209,0.8), rgba(0,255,209,0.4));
  }
  
  /* Polaroid styles (unchanged) */
  .photo-container {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .polaroid {
    background: white;
    padding: 10px 8px 0 8px;
    padding-bottom: 0;
    box-shadow: 
      0 10px 40px rgba(0,0,0,0.4),
      0 2px 4px rgba(0,0,0,0.2),
      inset 2px 2px 3px rgba(255,255,255,0.9),
      inset -2px -2px 3px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    position: relative;
  }
  
  .polaroid:hover {
    transform: scale(1.02);
  }
  
  .polaroid-image {
    width: 380px;
    height: 380px;
    object-fit: cover;
    display: block;
    filter: saturate(1.1) contrast(1.05);
    border: 1px solid rgba(0,0,0,0.05);
  }
  
  .polaroid-caption {
    position: relative;
    height: 160px;
    color: #333;
    font-size: 9px;
    font-family: 'Space Mono', monospace;
    background: white;
    padding: 12px 12px 8px 12px;
    margin: 0 -8px;
  }
  
  .spec-sheet {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }
  
  .spec-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 6px;
    margin-bottom: 12px;
  }
  
  .spec-id {
    font-weight: 700;
    font-size: 10px;
    letter-spacing: 0.05em;
  }
  
  .spec-classification {
    font-size: 8px;
    color: #666;
    letter-spacing: 0.1em;
  }
  
  .spec-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 8px 16px;
    font-size: 9px;
  }
  
  .spec-item {
    display: flex;
    justify-content: space-between;
    gap: 4px;
  }
  
  .spec-label {
    text-transform: uppercase;
    color: #888;
    font-size: 7px;
    letter-spacing: 0.05em;
  }
  
  .spec-value {
    font-weight: 600;
    color: #333;
    text-align: right;
  }
  
  /* Targeting reticles */
  .targeting-reticle {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px solid rgba(0,255,209,0.1);
    border-radius: 50%;
    pointer-events: none;
  }
  
  .targeting-reticle.inner {
    width: 60px;
    height: 60px;
  }
  
  .targeting-reticle.outer {
    width: 80px;
    height: 80px;
    border-color: rgba(0,255,209,0.05);
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .main-content {
      padding: 20px;
      flex-direction: column;
    }
    
    .name {
      font-size: 32px;
    }
    
    .polaroid {
      transform: scale(0.7);
    }
    
    .polaroid-image {
      width: 280px;
      height: 280px;
    }
  }
</style>