{
  "buildCommand": "bun run build",
  "installCommand": "bun install",
  "framework": null,
  "rewrites": [
    { "source": "/api/v1/:path*", "destination": "/api/index" }
  ],
  "redirects": [
    {
      "source": "/about-tactical",
      "destination": "/",
      "permanent": true
    },
    {
      "source": "/blog/:slug*",
      "destination": "/posts/:slug*",
      "permanent": true
    },
    {
      "source": "/posts/:slug*.md",
      "destination": "/posts/:slug*",
      "permanent": true
    },
    {
      "source": "/til/:slug*.md",
      "destination": "/til/:slug*",
      "permanent": true
    }
  ]
}